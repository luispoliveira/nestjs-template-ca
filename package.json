  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build:api": "nest build api",
    "start:api": "npx dotenv-cli -e .env.development.local -- nest start api --watch",
    "start:api:prod": "npx dotenv-cli -e .env --node dist/apps/api/main",
    "test": "npx dotenv-cli -e .env.test.local -- yarn test:unit",
    "test:unit": "npx dotenv-cli -e .env.test.local -- jest --runInBand --config ./jest-unit.config.js",
    "test:int": "npx dotenv-cli -e .env.test.local -- jest --runInBand --config ./jest-int.config.js",
    "test:e2e": "npx dotenv-cli -e .env.test.local -- jest --runInBand --config ./jest-e2e.config.js",
    "test:cov": "npx dotenv-cli -e .env.test.local -- jest --coverage"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@nestjs/common": "^11.1.6",
